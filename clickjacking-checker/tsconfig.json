{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": ".",
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "*": ["node_modules/"]
    }
  },
  "include": ["src/**/*"]
}

